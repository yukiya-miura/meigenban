<% if @posts.any? %>
  <ul class="list-unstyled mt-2">
    <% @posts.each do |post| %>
      <li class="d-flex">
        <div>
          <div>
            <%= link_to post.user.name, user_path(post.user), class: "text-decoration-none" %> <span class="text-muted">　投稿日: <%= post.created_at.strftime("%Y年 %m月 %d日") %></span>
          </div>
          <div class="mb-3">
            <p><%= post.content %></p>発言者:<%= post.author %>　作品名:<%= post.wordby %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>