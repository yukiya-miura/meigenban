<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @post) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="mb-3">
      <%= f.label :genre, 'ジャンル' %><br>
      <%= f.collection_select :genre_id, @genres, :name, :name, {include_blank: "---"} %>
      </div>  
      
      <div class="mb-3">
        <%= f.label :author, '発言者' %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :wordby, '作品名等' %>
        <%= f.text_field :wordby, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :content, '言葉' %>
        <%= f.text_area :content, :rows => "4", class: 'form-control' %>
      </div>


      <%= f.submit '更新', class: 'btn btn-primary w-100' %>
    <% end %>
  </div>
</div>