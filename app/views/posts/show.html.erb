<h3>コメント一覧</h3>
<% @comments.each do |comment| %>
  <div>
    <a href="/users/<%= @post.user.id %>"><%= @post.user.name %></a>　 <%= comment.content %>  <%=comment.created_at.strftime("%Y年 %m月 %d日") %>
    <% if current_user.id == comment.user.id %>
    <%#= link_to 'コメントを編集する', edit_post_comment_path(@post,comment)  %>
    <%= link_to 'コメントを削除する', post_comment_path(@post, comment), method: :delete, data: { confirm: '削除しますか？' } %>
    <% end %>
    <hr>
  </div>
<% end %>

<%= form_for [@post, @comment] do |f| %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>

